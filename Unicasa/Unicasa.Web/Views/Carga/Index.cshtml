@model Unicasa.Web.Models.CargaModel

@{
    ViewBag.Title = "Cargas";
    ViewBag.SmallDescription = "Cargas & informações detalhadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="../Content/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="../Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
}

<!-- BEGIN PAGE CONTENT INNER -->
<div class="page-content-inner">
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">@ViewBag.Title</span>
                    </div>
                    <div class="tools"> </div>
                </div>
                <div class="portlet-body">
                    <p>
                        Clique aqui para gerar uma nova importação.
                    </p>
                    <a href="@Url.Action("Upload", "Carga")" class="btn btn-info">Importar</a>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">Histórico</span>
                    </div>
                    <div class="tools"> </div>
                </div>

                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover" id="sample_1">
                        <thead>
                            <tr>
                                <th> Cód. </th>
                                <th> Usuario </th>
                                <th> Arquivo </th>
                                <th> Data Importação </th>
                                <th> Observação </th>
                                <th> Ação </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Cargas != null)
                            {
                                foreach (var carga in Model.Cargas)
                                {
                                    <tr>
                                        <td> @carga.Id </td>
                                        <td> @carga.UsuarioImportacao </td>
                                        <td> @carga.NomeArquivo </td>
                                        <td> @carga.DataProcessamento.ToShortDateString() </td>
                                        <td> @carga.Observacao </td>
                                        <td>
                                            @if (Session["PerfilEnum"].ToString() == "Administrador")
                                            {
                                                <a href="@Url.Action("Sincronizar", "Carga", new { carga.Id })" class="btn btn-success">Sincronizar</a>
                                            }
                                            <a href="@Url.Action("Excluir", "Carga", new { carga.Id })" class="btn btn-danger">Deletar</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="~/Content/assets/layouts/layout3/scripts/layout.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/layouts/global/scripts/quick-sidebar.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/layouts/global/scripts/quick-nav.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/assets/pages/scripts/table-datatables-rowreorder.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/layouts/layout3/scripts/layout.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/layouts/global/scripts/quick-sidebar.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/layouts/global/scripts/quick-nav.min.js" type="text/javascript"></script>
}
