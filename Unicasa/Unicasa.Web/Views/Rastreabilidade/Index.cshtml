@model Unicasa.Web.Models.TicketsModel
@using Unicasa.Domain.Helper


@{
    ViewBag.Title = "Rastreamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content-inner">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">@ViewBag.Title</span>
                    </div>
                    <div class="tools"> </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover" id="sample_1">
                        <thead>
                            <tr>
                                <th> Chave </th>
                                <th> Lote </th>
                                <th> Descricao</th>
                                <th> Ord. Compra </th>
                                <th> Data Agendamento </th>
                                <th> Data Entrega </th>
                                <th> Status </th>
                                <th> Ação </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Tickets != null)
                            {
                                foreach (var carga in Model.Tickets)
                                {
                                    using (Html.BeginForm("Update", "Rastreabilidade", FormMethod.Post))
                                    {
                                        <tr>
                                            @Html.HiddenFor(c => carga.Id)
                                            <td> @carga.Chave </td>
                                            <td> @Html.DisplayFor(c => carga.Titulo, new { @class = "form-control" }) </td>
                                            <td> @Html.DisplayFor(c => carga.Descricao, new { @class = "form-control" }) </td>
                                            <td> @Html.DisplayFor(c => carga.Detalhe, new { @class = "form-control" }) </td>
                                            <td> @Html.TextBoxFor(c => carga.DataAgendamento, new { @class = "form-control", type="date" })</td>
                                            <td> @Html.TextBoxFor(c => carga.DataEntrega, new { @class = "form-control", type = "date" })</td>
                                            <td>
                                                @Html.DropDownListFor(c => carga.TicketState, new SelectList(Enum.GetValues(typeof(TicketState))), "Selecione", new { @class = "form-control" })
                                            </td>
                                            <td> <input type="submit" name="@carga.Id" class="btn btn-success" value="Salvar"/> </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>