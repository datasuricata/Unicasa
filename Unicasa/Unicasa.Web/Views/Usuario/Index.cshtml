@model Unicasa.Web.Models.UsuarioModel
@{
    ViewBag.Title = "Administração do Usuário";
    ViewBag.SmallDescription = "Usuários & informações detalhadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="../Content/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../Content/assets/global/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
    <link href="../Content/assets/global/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />
}

<!-- BEGIN PAGE CONTENT INNER -->
<div class="page-content-inner">
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">@ViewBag.Title</span>
                    </div>
                    <div class="tools"> </div>
                </div>
                <div class="portlet-body">
                    <p>
                        Clique aqui para criar um novo usuário.
                    </p>
                    <a class="btn btn-outline dark" data-toggle="modal" href="#responsive"> Criar Usuario </a>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">@ViewBag.Title</span>
                    </div>
                    <div class="tools"> </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover" id="sample_1">
                        <thead>
                            <tr>
                                <th> Nome </th>
                                <th> Perfil </th>
                                <th> Email </th>
                                <th> Ação </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Usuarios.Any())
                            {
                                foreach (var user in Model.Usuarios)
                                {
                                    <tr>
                                        <td> @user.NomeCompleto </td>
                                        <td> @user.UserRole.GetType().GetEnumValues().ToString() </td>
                                        <td> @user.Email </td>
                                        <td>
                                            <a class="btn btn-outline green" data-toggle="modal" href="#responsive">
                                                Editar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>
<div id="responsive" class="modal fade" tabindex="-1" data-width="420">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Criar Usuario</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 bold">
                @Html.HiddenFor(m => m.Usuario.Id)
                <h4>Informe todos os dados para criar um novo usuario</h4>
                <p>
                    <h6>NOME:</h6>
                    <input value='@Model.Usuario.NomeCompleto' name='@Model.Usuario.NomeCompleto' class="form-control" type="text">
                </p>
                <p>
                    <h6>PERFIL:</h6>
                    <input value='@Model.Usuario.UserRole' name='@Model.Usuario.UserRole' class="form-control" type="text">
                </p>
                <p>
                    <h6>EMAIL:</h6>
                    <input value='@Model.Usuario.Email' name='@Model.Usuario.Email' class="form-control" type="text">
                </p>
                <p>
                    <h6>SENHA:</h6>
                    <input value='@Model.Usuario.Senha' name='@Model.Usuario.Senha' class="form-control" type="password">
                </p>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancelar</button>
        <button type="button" class="btn green">Criar</button>
    </div>
</div>

<script src="../Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="../Content/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="../Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
