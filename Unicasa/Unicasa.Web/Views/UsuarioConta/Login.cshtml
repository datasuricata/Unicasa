<body class="user-login-5">
    <!-- BEGIN : LOGIN PAGE 5-1 -->
    <div class="user-login-5">
        <div class="row bs-reset">
            <div class="col-md-6 bs-reset mt-login-5-bsfix">
                <div class="login-container" style="background-image:url(../Content/assets/pages/img/login/bg1.jpeg)">
                    @*<img class="login-logo" src="~/Content/assets/pages/img/login/LogoGraneroLogin.png" />*@
                </div>
            </div>
            <div class="col-md-6 login-container bs-reset mt-login-5-bsfix">
                <div class="login-content">
                    <h1><b>Granero</b></h1>
                    @using (Html.BeginForm("Login", "UsuarioConta", FormMethod.Post, new { @class = "login-form", role = "form" }))
                    {
                        if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissable fade in" role="alert">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                @Html.Raw(TempData["Message"])
                            </div>
                        }
                        <p> Efetue o login para acessar as funcionalidades de rastreabilidade do sistema. </p>
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            <span>Entre com login e senha.</span>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-solid placeholder-no-fix form-group", placeholder = "usuario@dominio.com.br"})
                            </div>
                            <div class="col-xs-6">
                                @Html.PasswordFor(m => m.Senha, new { @class = "form-control form-control-solid placeholder-no-fix form-group", placeholder = "senha..." })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="rem-password">
                                    <label class="rememberme mt-checkbox mt-checkbox-outline">
                                        <input type="checkbox" name="remember" value="1" /> Lembrar senha
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-8 text-right">
                                <input class="btn green" type="submit" value="Acessar">
                            </div>
                        </div>
                    }

                </div>
                <div class="login-footer">
                    <div class="row bs-reset">
                        <div class="col-xs-7 bs-reset">
                            <div class="login-copyright text-right">
                                <p>Copyright &copy; Granero Transportes @DateTime.Now.Year.ToString()</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END : LOGIN PAGE 5-1 -->
